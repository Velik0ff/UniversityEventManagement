script.
	function addCustomField() { // add custom field to the page
		// create custom field container and append to div container of custom fields
		$('<div>').attr('class', 'row form-group').attr('id', 'row' + field_count).appendTo('#customFields');

		/* Custom field name column */
		$('<div>').attr('class', 'col').attr('id', 'nameCol' + field_count).appendTo('#row' + field_count); // container of the input field
		$('<label>').attr('for', 'fieldName' + field_count).appendTo('#nameCol' + field_count).text('Custom Field ' + field_count + ' Name'); // the label for the field name
		$('<input>')
				.attr('type', 'text')
				.attr('class', 'form-control')
				.attr('name', 'fieldName' + field_count)
				.appendTo('#nameCol' + field_count); // the field name
		/* End Custom field name column */

		/* Custom field value column */
		$('<div>').attr('class', 'col').attr('id', 'valueCol' + field_count).appendTo('#row' + field_count); // container of the input field
		$('<label>').attr('for', 'fieldValue' + field_count).appendTo('#valueCol' + field_count).text('Custom Field ' + field_count + ' Value'); // the label for the field value
		$('<input>')
				.attr('type', 'text')
				.attr('class', 'form-control')
				.attr('name', 'fieldValue' + field_count)
				.appendTo('#valueCol' + field_count); // the field value
		/* End Custom field value column */

		/* Custom field delete */
		$('<div>')
				.attr('class', 'col')
				.attr('id', 'removeCol' + field_count)
				.attr('style', 'flex-grow:0;position:relative;')
				.appendTo('#row' + field_count); // container of the button
		$('<a>')
				.attr('class', 'options-btn')
				.attr('href', '#')
				.attr('id', 'removeIcon' + field_count)
				.attr('style', 'position:absolute;bottom:0;left:0')
				.attr('onclick', '$(this).parent().parent().remove()')
				.appendTo('#removeCol' + field_count); // action button
		$('<i>').attr('class', 'material-icons md-18').text('delete').appendTo('#removeIcon' + field_count); // delete icon
		/* End Custom field delete */

		field_count++; // increment number of custom fields
	}